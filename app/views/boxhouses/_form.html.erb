<%= form_with model: @boxhouse do |form| %>
  <div>
    <%= form.label :name, "Name : " %>
    <%= form.text_field :name %>
    <% boxhouse.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div><br>

  <div>
    <%= form.label :phone, "Phone : " %>
    <%= form.text_field :phone %>
    <% boxhouse.errors.full_messages_for(:phone).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div><br>

  <div>
    <%= form.label :description, "Description : " %>
    <%= form.text_area :description %>
    <% boxhouse.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div><br>

  <div>
    <%= form.label :timing, "Time : " %>
    <%= form.text_field :timing, placeholder: "09:00 AM - 11:30 PM" %>
    <% boxhouse.errors.full_messages_for(:timing).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div><br>

  <div>
    <%= form.label :address, "Address : " %>
    <%= form.text_field :address %>
    <% boxhouse.errors.full_messages_for(:address).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </div><br>

  <div>
    <%= form.submit %>
  </div>

<% end %>