<div class="container mt-5">
  <div class="card shadow-lg p-4 animate__animated animate__fadeIn">
    <!-- Custom Title with Fancy Font and Gradient -->
    <h2 class="text-center mb-4 boxhouse-title">üè† Boxhouse Details</h2>
    <hr class="custom-divider">

    <!-- Boxhouse Information -->
    <p><strong>Name :</strong> <%= @boxhouse.name %></p>
    <p><strong>Owner :</strong> <%= @boxhouse.user.username %></p>
    <p><strong>Phone :</strong> <%= @boxhouse.phone %></p>
    <p><strong>Description :</strong> <%= @boxhouse.description %></p>
    <p><strong>Timing :</strong> <%= @boxhouse.timing %></p>
    <p><strong>Address :</strong> <%= @boxhouse.address %></p>

    <!-- Image with Shadow & Rounded Corners -->
    <% if @boxhouse.image.attached? %>
      <div class="text-center my-4">
        <%= image_tag @boxhouse.large_image, class: "img-fluid rounded-4 shadow-sm" %>
      </div>
    <% end %>

    <!-- Boxes List -->
    <p><strong>Boxes :</strong> <%= @boxhouse.boxes.map(&:name).join(", ") %></p>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between mt-4">
      <%= link_to "View Boxes", boxhouse_boxes_path(@boxhouse), class: "btn btn-lg custom-btn" %>
    
      <% if policy(@boxhouse).edit? %> <!-- Authorization check for edit -->
        <%= link_to "Edit", edit_boxhouse_path(@boxhouse), class: "btn btn-lg custom-btn-warning me-2" %>
      <% end %>
    
      <% if policy(@boxhouse).destroy? %> <!-- Authorization check for destroy -->
        <%= button_to "Delete", boxhouse_path(@boxhouse), method: :delete, class: "btn btn-lg custom-btn-danger", data: { confirm: "Are you sure?" } %>
      <% end %>
      
    </div>
  </div>
</div>

<div class="mt-4 mb-4"><%= render 'feedbacks/index', feedbacks: @feedbacks, boxhouse: @boxhouse %></div>

<!-- Custom CSS Styling -->
<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@600&family=Pacifico&display=swap');

  /* Title with Gradient & Custom Font */

  /* Divider Styling */
  .custom-divider {
    border-top: 3px solid #ff8800;
    width: 100%;
    margin: 0 auto 20px;
  }

  /* Button Custom Effects */
  .custom-btn {
    background: linear-gradient(90deg, #003cff, #22b9ff);
    color: white;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .custom-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
  }

  .custom-btn-warning {
    background: linear-gradient(90deg, #ff9800, #ff5722);
    color: white;
  }
  .custom-btn-danger {
    background: linear-gradient(90deg, #f44336, #e91e63);
    color: white;
  }

  /* Animation */
  .animate__animated.animate__fadeIn {
    animation: fadeIn 1.5s;
  }
</style>
